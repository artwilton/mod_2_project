<h1>Hi there, <%= @user.name %>
<%= image_tag('1200px-Twitter_Verified_Badge.png', size: "16x16", alt: "") if @user.expert?%>
</h1>



<%= image_tag(@user.profile_picture) if @user.profile_picture.attached?%>
<p>Account type: <%= @user.expert? ? "Expert" : "Student only" %></p>

<%= button_to "Edit Profile", '/profile/edit', method: :get %>

<br>

<% progress = Progress.find_by(student_id: current_user) %>
<% if progress %>

    <%= progress.skill.name%> (<%= progress.skill.difficult_level%>): <%= number_to_percentage(@user.lesson_progresses_percent(Progress.find_by(student_id: current_user).skill) * 100, precision: 0) %>
<% end %>

<%= button_to "Delete account", '/users/destroy', class: "nav-link", method: :delete, data: { confirm: 'Are you sure?', disable_with: 'loading...' } %>