<li>
    <h1>
        <% if @user == user %>
            <%= link_to user.name, '/profile' %>
        <% else %>
            <%= link_to user.name, user_path(user) %>
        <% end %>
    </h1>
    <%= image_tag('1200px-Twitter_Verified_Badge.png', size: "16x16", alt: "") if user.expert?%>
    <%= image_tag(user.profile_picture) if user.profile_picture.attached?%>
</li>