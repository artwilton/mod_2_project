<%= bootstrap_form_for @lesson do |f| %>
    <%= flash[:errors] %><br>
    <%= f.text_field :name, hide_label: true, placeholder: "Name"  %>   
    <%= f.text_area :description, hide_label: true, placeholder: "Description"  %>
    <%= f.collection_select :skill_id, @user.skills, :id, :name, {label: 'Skill', hide_label: false} %>
    <%= f.file_field :lesson_video%>
    <%= f.submit "create lesson" %>
<% end %>