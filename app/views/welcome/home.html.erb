<main role="main" >
  <div class="inner cover">
    <h1 class="cover-heading">Learn anytime, anywhere, at your own pace.</h1>
    <p class="lead">Watch lessons from experts as they share their stories, skills, shortcuts, failures, and successes.</p>
    <p class="lead">
      <a href="/signup" class="btn btn-lg btn-secondary">Get Started</a>
    </p>
  </div>

  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src= <%=image_url('carousel/skate.jpg') %> class="rounded mx-auto d-block" alt="logo">
        <div class="container">
          <div class="carousel-caption">
            <p>
              <% unless @user.id %>
                <%= button_to "Sign Up To View", '/signup', class: "btn btn-lg btn-primary", method: :get%>
              <% else %>
                <%= button_to "Watch Lesson", '/signup', class: "btn btn-lg btn-primary", method: :get %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src= <%=image_url('carousel/piano.jpg') %> class="rounded mx-auto d-block" alt="logo">
        <div class="container">
          <div class="carousel-caption">
            <p>
              <% unless @user.id %>
                <%= button_to "Sign Up To View", '/signup', class: "btn btn-lg btn-primary", method: :get%>
              <% else %>
                <%= button_to "Watch Lesson", '/signup', class: "btn btn-lg btn-primary", method: :get %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img src= <%=image_url('carousel/oragami.jpg') %> class="rounded mx-auto d-block" alt="logo">
        <div class="container">
          <div class="carousel-caption">
            <p>
              <% unless @user.id %>
                <%= button_to "Sign Up To View", '/signup', class: "btn btn-lg btn-primary", method: :get%>
              <% else %>
                <%= button_to "Watch Lesson", '/signup', class: "btn btn-lg btn-primary", method: :get %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  
</main>

