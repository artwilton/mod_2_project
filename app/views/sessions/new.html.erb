<%= bootstrap_form_for @user, url: login_path, method: :post do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <%= f.text_field :username, hide_label: true, placeholder: "Username" %>
  <%= f.password_field :password, hide_label: true, placeholder: "Password" %>
  <%= f.submit "Log In", class: "btn btn-lg btn-primary btn-block" %><br>
  Not a member yet? <%= link_to 'Sign Up', new_user_path %>
<% end %>