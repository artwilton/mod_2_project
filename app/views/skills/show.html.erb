<head>
  <link href="https://vjs.zencdn.net/7.8.4/video-js.css" rel="stylesheet" />

  <!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
  <script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
</head>

<body>

<main role="main">

    <section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading"> <%= @skill.name %> </h1>
        <p class="lead text-muted"> <%= @skill.lessons.first.description %> </p>
        <p>
        <a href="#" class="btn btn-primary my-2">Main call to action</a>
        <a href="#" class="btn btn-secondary my-2">Secondary action</a>
        </p>
    </div>
    </section>

    <div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= url_for(@skill.skill_thumbnail) %>" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">  <%= @skill.lessons.first.name %> </p>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#exampleModalCenter">Play</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Mark As Played</button>
                </div>
                <small class="text-muted"> <%= @skill.lessons.first.duration %> </small>
                </div>
            </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= url_for(@skill.skill_thumbnail) %>" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">  <%= @skill.lessons.second.name %> </p>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted"> <%= @skill.lessons.second.duration %> </small>
                </div>
            </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= url_for(@skill.skill_thumbnail) %>" alt="Card image cap">
            <div class="card-body">
                <p class="card-text">  <%= @skill.lessons.third.name %> </p>
                <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted"> <%= @skill.lessons.third.duration %> </small>
                </div>
            </div>
            </div>
        </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if @skill.lessons.first.lesson_video.attached? %>

            <video
                id="my-video"
                class="video-js"
                class="vjs-big-play-centered"
                controls
                preload="auto"
                width="640"
                height="360"
                poster="MY_VIDEO_POSTER.jpg"
                data-setup="{}"
            >
                <source src="<%= url_for(@skill.lessons.first.lesson_video) %>" type="video/mp4" />
                
            </video>

            <script src="https://vjs.zencdn.net/7.8.4/video.js"></script>
            <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

</body>



</main>